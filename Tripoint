<script>
let slides = document.querySelector('.slides');
let images = document.querySelectorAll('.slides img');
let index = 0;
document.getElementById('next').onclick = () => { index = (index + 1) % images.length; slides.style.transform = `translateX(${-index*100}%)`; };
document.getElementById('prev').onclick = () => { index = (index - 1 + images.length) % images.length; slides.style.transform = `translateX(${-index*100}%)`; };
</script>

